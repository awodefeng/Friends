<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/view_margin_top"
        android:layout_marginBottom="@dimen/view_margin_bottom"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/view_line"

        >
        <ImageView
            android:id="@+id/iv_publisphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_photo"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_publislocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_position"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/view_line"
        >
        <ImageView
            android:id="@+id/iv_publismood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_mood"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_publistext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_text"
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>