<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/iv_likehead"
        android:layout_width="54px"
        android:layout_height="54px"
        android:src="@mipmap/bg_findfriends"
        android:layout_margin="@dimen/margin"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/rout_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_likehead"
        android:layout_centerVertical="true"

        >
        <TextView
            android:id="@+id/tv_likename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_28"
            android:textColor="@color/white"
            android:text=""
            />

        <TextView
            android:id="@+id/tv_liketime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_24"
            android:textColor="@color/white"
            android:text=""
            android:layout_marginRight="@dimen/btn_margin_right"
            android:layout_below="@+id/tv_likename"
            android:layout_marginTop="2dp"
            />

    </RelativeLayout>


    <View
        android:id="@+id/view_like_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginLeft="@dimen/btn_margin_left"
        android:layout_marginRight="@dimen/btn_margin_right"
        android:layout_below="@id/iv_likehead"
        />

</RelativeLayout>